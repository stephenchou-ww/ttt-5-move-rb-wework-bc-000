#!/usr/bin/env ruby

require_relative '../lib/move.rb'
require "pry"


# Code your CLI Here

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)
puts "Where would you like to go?"

input = gets.strip
move_index = input_to_index(input)
move(board, move_index, "X")
binding.pry
display_board(board)
